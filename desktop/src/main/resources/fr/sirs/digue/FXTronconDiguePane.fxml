<fx:root prefHeight="768.0" prefWidth="1024.0" type="BorderPane" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
    <top>
        <BorderPane styleClass="blue-light" BorderPane.alignment="CENTER" VBox.vgrow="NEVER">
            <center>
                <GridPane hgap="8.0" vgap="15.0" BorderPane.alignment="CENTER">
                    <children>
                        <Label styleClass="label-header" text="Informations sur le tronçon" GridPane.columnSpan="2" />
                        <Label styleClass="label-header" text="Digue :" GridPane.rowIndex="2" GridPane.valignment="CENTER" />
                        <TextField fx:id="uiName" maxWidth="1.7976931348623157E308" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                        <Label styleClass="label-header" text="Nom :" GridPane.rowIndex="1" />
                        <Label styleClass="label-header" text="Identifiant :" GridPane.columnIndex="2" GridPane.halignment="RIGHT" />
                        <ChoiceBox fx:id="uiDigue" maxWidth="1.7976931348623157E308" minWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                        <Label styleClass="label-header" text="Rive :" GridPane.columnIndex="2" GridPane.halignment="RIGHT" GridPane.rowIndex="2" />
                        <ChoiceBox fx:id="uiRive" maxWidth="1.7976931348623157E308" minWidth="150.0" GridPane.columnIndex="3" GridPane.rowIndex="2" />
                        <Label styleClass="label-header" text="SR par défaut :" GridPane.columnIndex="2" GridPane.halignment="RIGHT" GridPane.rowIndex="1" />
                  <ChoiceBox fx:id="uiSrDefault" maxWidth="1.7976931348623157E308" minWidth="150.0" GridPane.columnIndex="3" GridPane.rowIndex="1" />
                  <Label fx:id="uiId" styleClass="label-header" GridPane.columnIndex="3" GridPane.columnSpan="2" />
                    </children>
                    <columnConstraints>
                        <ColumnConstraints fillWidth="false" hgrow="NEVER" />
                        <ColumnConstraints hgrow="NEVER" />
                        <ColumnConstraints fillWidth="false" hgrow="NEVER" />
                        <ColumnConstraints hgrow="NEVER" />
                  <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" />
                    </columnConstraints>
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </padding>
                    <rowConstraints>
                        <RowConstraints vgrow="NEVER" />
                        <RowConstraints vgrow="NEVER" />
                        <RowConstraints vgrow="NEVER" />
                    </rowConstraints>
                </GridPane>
            </center>
         <left>
            <Button contentDisplay="TOP" maxHeight="1.7976931348623157E308" mnemonicParsing="false" onAction="#showOnMap" styleClass="geobutton" BorderPane.alignment="CENTER">
               <graphic>
                  <ImageView pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../images/menu-carto.png" />
                     </image>
                  </ImageView>
               </graphic>
               <font>
                  <Font name="System Bold" size="13.0" />
               </font>
            </Button>
         </left>
         <right>
            <FXEditMode fx:id="uiMode" BorderPane.alignment="CENTER" />
         </right>
        </BorderPane>
    </top>
    <center>
        <BorderPane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" BorderPane.alignment="CENTER">
            <center>
                <TabPane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" style="-fx-background-color: rgb(245,245,245);" tabClosingPolicy="UNAVAILABLE" BorderPane.alignment="CENTER">
                    <tabs>
                        <Tab text="Description">
                            <content>
                                <VBox prefHeight="200.0" prefWidth="100.0" spacing="10.0">
                                    <children>
                                          <GridPane hgap="10.0" styleClass="gray-light" vgap="10.0">
                                              <children>
                                                  <Label text="Validité">
                                                      <font>
                                                          <Font name="System Bold" size="13.0" />
                                                      </font>
                                                      <GridPane.margin>
                                                          <Insets />
                                                      </GridPane.margin>
                                                  </Label>
                                                  <Label text="Début" GridPane.columnIndex="1">
                                                      <GridPane.margin>
                                                          <Insets />
                                                      </GridPane.margin>
                                                  </Label>
                                                  <Label text="Fin" GridPane.columnIndex="3" />
                                    <FXDateField fx:id="uiDateStart" GridPane.columnIndex="2" />
                                    <FXDateField fx:id="uiDateEnd" GridPane.columnIndex="4" />
                                              </children>
                                              <columnConstraints>
                                                  <ColumnConstraints hgrow="NEVER" />
                                                  <ColumnConstraints hgrow="NEVER" />
                                                  <ColumnConstraints hgrow="NEVER" />
                                                  <ColumnConstraints hgrow="NEVER" />
                                    <ColumnConstraints hgrow="NEVER" />
                                              </columnConstraints>
                                              <padding>
                                                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                              </padding>
                                              <rowConstraints>
                                                  <RowConstraints vgrow="NEVER" />
                                              </rowConstraints>
                                          </GridPane>
                                        <GridPane hgap="10.0" styleClass="gray-light" vgap="10.0">
                                            <columnConstraints>
                                                <ColumnConstraints hgrow="NEVER" />
                                                <ColumnConstraints hgrow="SOMETIMES" />
                                            </columnConstraints>
                                            <rowConstraints>
                                                <RowConstraints vgrow="SOMETIMES" />
                                            </rowConstraints>
                                            <children>
                                                <Label text="Commentaire" GridPane.valignment="TOP">
                                                    <padding>
                                                        <Insets top="10.0" />
                                                    </padding>
                                                </Label>
                                    <HTMLEditor fx:id="uiComment" htmlText="&lt;html&gt;&lt;head&gt;&lt;/head&gt;&lt;body contenteditable=&quot;true&quot;&gt;&lt;/body&gt;&lt;/html&gt;" prefHeight="300.0" GridPane.columnIndex="1" />
                                            </children>
                                 <padding>
                                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                 </padding>
                                        </GridPane>
                                    </children>
                                    <padding>
                                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                    </padding>
                                </VBox>
                            </content>
                        </Tab>
                        <Tab text="Systèmes de repérage">
                     <content>
                        <SplitPane dividerPositions="0.5" prefHeight="200.0" prefWidth="200.0">
                           <items>
                              <BorderPane maxWidth="300.0">
                                 <center>
                                    <ListView fx:id="uiSRList" BorderPane.alignment="CENTER" />
                                 </center>
                                 <top>
                                    <GridPane styleClass="buttonbar" BorderPane.alignment="CENTER">
                                      <columnConstraints>
                                        <ColumnConstraints hgrow="ALWAYS" />
                                        <ColumnConstraints hgrow="NEVER" />
                                          <ColumnConstraints hgrow="SOMETIMES" />
                                      </columnConstraints>
                                      <rowConstraints>
                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                      </rowConstraints>
                                       <children>
                                          <Label styleClass="label-header" text="Système de repérage">
                                             <GridPane.margin>
                                                <Insets left="10.0" />
                                             </GridPane.margin>
                                          </Label>
                                          <Button fx:id="uiSRAdd" mnemonicParsing="false" onAction="#srAdd" styleClass="btn-without-style" GridPane.columnIndex="1" />
                                          <Button fx:id="uiSRDelete" mnemonicParsing="false" onAction="#srDelete" styleClass="btn-without-style" GridPane.columnIndex="2" />
                                       </children>
                                    </GridPane>
                                 </top>
                              </BorderPane>
                              <BorderPane fx:id="uiSrTab" />
                           </items>
                        </SplitPane>
                     </content>
                        </Tab>
                        <Tab fx:id="uiContactTab" text="Contacts" />
                    </tabs>
                    <BorderPane.margin>
                        <Insets />
                    </BorderPane.margin>
                </TabPane>
            </center>
        </BorderPane>
    </center>
</fx:root>
