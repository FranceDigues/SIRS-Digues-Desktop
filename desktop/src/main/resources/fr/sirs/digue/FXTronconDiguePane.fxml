<?xml version="1.0" encoding="UTF-8"?>

<?import fr.sirs.*?>
<?import javafx.scene.effect.*?>
<?import org.geotoolkit.gui.javafx.util.*?>
<?import jfxtras.scene.control.*?>
<?import javafx.scene.web.*?>
<?import java.net.*?>
<?import java.lang.*?>
<?import javafx.geometry.*?>
