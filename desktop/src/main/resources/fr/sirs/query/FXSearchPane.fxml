<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>

<fx:root maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="-Infinity" minWidth="-Infinity" type="BorderPane" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
   <top>
      <BorderPane fx:id="uiTopPane" BorderPane.alignment="CENTER">
         <top>
            <HBox alignment="CENTER" style="-fx-background-color: rgb(74,123,165);" BorderPane.alignment="CENTER">
               <children>
                  <ToggleButton fx:id="uiTogglePlainText" mnemonicParsing="false" styleClass="state-button-left" text="Recherche plein texte" />
                  <ToggleButton fx:id="uiToggleSimple" mnemonicParsing="false" styleClass="state-button-center" text="Requête simple" />
                  <ToggleButton fx:id="uiToggleSQL" mnemonicParsing="false" styleClass="state-button-right" text="Requête SQL" />
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </HBox>
         </top>
         <center>
            <VBox BorderPane.alignment="CENTER">
               <children>
                  <GridPane fx:id="uiPlainTextPane" hgap="10.0" vgap="10.0">
                    <columnConstraints>
                      <ColumnConstraints hgrow="NEVER" />
                      <ColumnConstraints hgrow="ALWAYS" />
                        <ColumnConstraints hgrow="NEVER" />
                    </columnConstraints>
                    <rowConstraints>
                      <RowConstraints vgrow="NEVER" />
                        <RowConstraints vgrow="NEVER" />
                    </rowConstraints>
                     <children>
                        <Label text="Mots clés :" />
                        <TextField fx:id="uiElasticKeywords" GridPane.columnSpan="3" GridPane.rowIndex="1" />
                     </children>
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                  </GridPane>
                  <GridPane fx:id="uiSimplePane" hgap="10.0" vgap="10.0">
                    <columnConstraints>
                      <ColumnConstraints hgrow="NEVER" />
                      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                    </columnConstraints>
                    <rowConstraints>
                      <RowConstraints vgrow="NEVER" />
                      <RowConstraints maxHeight="1.7976931348623157E308" vgrow="ALWAYS" />
                        <RowConstraints maxHeight="1.7976931348623157E308" vgrow="ALWAYS" />
                    </rowConstraints>
                     <children>
                        <Label text="Table :" />
                        <ChoiceBox fx:id="uiDBTable" GridPane.columnIndex="1" />
                        <Label text="Filtre :" GridPane.rowIndex="1" />
                        <BorderPane fx:id="uiFilterPane" maxHeight="1.7976931348623157E308" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                        <TextArea fx:id="uiSimpleSQL" editable="false" prefHeight="70.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                        <Label text="Requête :" GridPane.rowIndex="2" GridPane.valignment="TOP" />
                     </children>
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                  </GridPane>
                  <GridPane fx:id="uiSQLPane" hgap="10.0" vgap="10.0">
                    <columnConstraints>
                      <ColumnConstraints hgrow="NEVER" />
                      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                    </columnConstraints>
                    <rowConstraints>
                      <RowConstraints vgrow="NEVER" />
                    </rowConstraints>
                     <children>
                        <Label text="Requête :" GridPane.valignment="TOP" />
                        <TextArea fx:id="uiAdvSQL" prefHeight="70.0" promptText="SELECT * FROM DIGUE" text="SELECT * FROM DIGUE" GridPane.columnIndex="1" />
                     </children>
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                  </GridPane>
               </children>
            </VBox>
         </center>
         <bottom>
            <GridPane hgap="5.0" style="-fx-background-color: rgb(74,123,165);" vgap="5.0" BorderPane.alignment="CENTER">
              <columnConstraints>
                  <ColumnConstraints hgrow="NEVER" />
                  <ColumnConstraints hgrow="NEVER" />
                  <ColumnConstraints hgrow="NEVER" />
                  <ColumnConstraints hgrow="NEVER" />
                  <ColumnConstraints hgrow="ALWAYS" maxWidth="1.7976931348623157E308" />
                <ColumnConstraints hgrow="NEVER" />
                  <ColumnConstraints hgrow="NEVER" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints vgrow="NEVER" />
              </rowConstraints>
               <children>
                  <Button mnemonicParsing="false" onAction="#search" style="-fx-border-color: white; -fx-border-radius: 5;" text="EXECUTER" GridPane.columnIndex="6" GridPane.halignment="RIGHT">
                     <styleClass>
                        <String fx:value="buttonbar-button" />
                        <String fx:value="label-header" />
                     </styleClass></Button>
                  <Button fx:id="uiViewModel" mnemonicParsing="false" onAction="#viewDBModel" text="Voir le modèle SQL">
                     <styleClass>
                        <String fx:value="buttonbar-button" />
                        <String fx:value="label-header" />
                     </styleClass></Button>
                  <Button fx:id="uiExport" mnemonicParsing="false" onAction="#exportSQL" text="Export SQL" GridPane.columnIndex="3">
                     <styleClass>
                        <String fx:value="buttonbar-button" />
                        <String fx:value="label-header" />
                     </styleClass></Button>
                  <Button fx:id="uiSave" mnemonicParsing="false" onAction="#saveSQL" text="Sauvegarder" GridPane.columnIndex="1">
                     <styleClass>
                        <String fx:value="buttonbar-button" />
                        <String fx:value="label-header" />
                     </styleClass>
                  </Button>
                  <Button fx:id="uiOpen" mnemonicParsing="false" onAction="#openSQL" text="Ouvrir" GridPane.columnIndex="2">
                     <styleClass>
                        <String fx:value="buttonbar-button" />
                        <String fx:value="label-header" />
                     </styleClass>
                  </Button>
                  <Button fx:id="uiCarto" mnemonicParsing="false" onAction="#exportMap" style="-fx-border-color: white; -fx-border-radius: 5;" text="Afficher sur la carte" GridPane.columnIndex="5">
                     <styleClass>
                        <String fx:value="buttonbar-button" />
                        <String fx:value="label-header" />
                     </styleClass>
                  </Button>
               </children>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
            </GridPane>
         </bottom>
      </BorderPane>
   </top>
</fx:root>
